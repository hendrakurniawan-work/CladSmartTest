@model CladSmartTest.DataLayer.employee

@{
    ViewBag.Title = "Edit";
}

<h2>Employee Detail</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr/>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.nik, new { htmlAttributes = new { @class = "form-control" } })

    <div class="form-group">
        <label class="col-md-10">Name</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-10">Department</label>
        <div class="col-md-10">
            @Html.DropDownList("department_id", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-10">Position</label>
        <div class="col-md-10">
            @Html.DropDownList("position", null, htmlAttributes: new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-10">BPJS</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.bpjs_allowance)
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-10">Meal</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.meal_allowance)
            </div>
        </div>
    </div>

    <div class="form-group">
        <label class="col-md-10">Laptop</label>
        <div class="col-md-10">
            <div class="checkbox">
                @Html.EditorFor(model => model.laptop_allowance)
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary" /> |
            @Html.ActionLink("Back to List", "Index")

        </div>
    </div>
</div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
