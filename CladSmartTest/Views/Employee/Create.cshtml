@model CladSmartTest.DataLayer.employee

@{
    ViewBag.Title = "Create";
}

<h2>Employee Detail</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="col-md-10">NIK</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.nik, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nik, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-10">Name</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-10">Department</label>
            <div class="col-md-10">
                @Html.DropDownList("department_id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.department_id, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-10">Position</label>
            <div class="col-md-10">
                @Html.DropDownList("position", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.position, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-10">BPJS</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.bpjs_allowance)
                    @Html.ValidationMessageFor(model => model.bpjs_allowance, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-10">Meal</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.meal_allowance)
                    @Html.ValidationMessageFor(model => model.meal_allowance, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <label class="col-md-10">Laptop</label>
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.CheckBoxFor(model => model.laptop_allowance)
                    @Html.ValidationMessageFor(model => model.laptop_allowance, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" /> |
                @Html.ActionLink("Back to List", "Index")

            </div>
        </div>
    </div>
}

@if (ViewBag.Alert != null)
{
    <script type="text/javascript">

            window.onload = function () {
                alert("@ViewBag.Alert");
            };

    </script>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
